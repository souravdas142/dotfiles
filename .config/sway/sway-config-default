# Lock you screen
# After "--" `betterlockscreen Assumes all are `i3lock` options.
bindsym $mod+shift+x exec --no-startup-id betterlockscreen -l blur --off 15 -- --pass-power-keys  --pass-volume-keys

#application launcher
#bindsym $mod+d exec rofi -show drun -modi drun
